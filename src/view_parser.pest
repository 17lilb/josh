WHITESPACE = _{ " " | "\t" }


view = { item* }

item = _{ transform }

transform = { "!" ~ cmd ~ "/" ~ name }

name = { (!("!" | ")" | "," | "\n") ~ ANY)+ }

cmd = { (!("/" | "(" | "," | "\n") ~ ANY)* }

viewfile = { "\n"? ~ root_entry ~ ("\n" ~ file_entry)* }

root_entry = { "/" ~ ":" ~ view }

file_entry = { dst_path ~ ":" ~ view }

dst_path = @{ (!(":" | WHITESPACE) ~ ANY)+ }

